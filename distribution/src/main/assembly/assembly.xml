<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>dist</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>src/main/bundle</directory>
			<includes>
				<include>LICENCE.txt</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/conf</directory>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/data</directory>
			<outputDirectory>/data</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/logs</directory>
			<outputDirectory>/logs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/extra</directory>
			<outputDirectory>/extra</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/bundle/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<directoryMode>0755</directoryMode>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<directoryMode>0755</directoryMode>
			<unpack>true</unpack>
			<includes>
				<include>io.imunity:unity-vaadin-styles:zip:webResources</include>
			</includes>
			<scope>test</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/conf</outputDirectory>
			<directoryMode>0755</directoryMode>
			<unpack>true</unpack>
			<includes>
				<include>io.imunity:*:zip:i18n</include>
				<include>io.imunity:*:zip:scripts</include>
			</includes>
			<scope>test</scope>
		</dependencySet>
	</dependencySets>
</assembly>
